<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/bj"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/reg_touxiang"
            android:layout_width="106px"
            android:layout_height="112px"
            android:layout_marginTop="296px"
            android:background="@drawable/moren" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="46px"
            android:text="@string/nicheng"
            android:textColor="#000000"
            android:textSize="24px" />

        <EditText
            android:id="@+id/reg_nicheng"
            android:layout_width="288px"
            android:layout_height="42px"
            android:layout_marginTop="13px"
            android:gravity="center"
            android:maxLength="8"
            android:textSize="24px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13px"
            android:text="@string/xingming"
            android:textColor="#000000"
            android:textSize="24px" />

        <EditText
            android:id="@+id/reg_xingming"
            android:layout_width="288px"
            android:layout_height="42px"
            android:layout_marginTop="13px"
            android:gravity="center"
            android:maxLength="8"
            android:textSize="24px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13px"
            android:text="@string/banjiyanzhengma"
            android:textColor="#000000"
            android:textSize="24px" />

        <EditText
            android:id="@+id/reg_banjiyanzhengma"
            android:layout_width="288px"
            android:layout_height="42px"
            android:layout_marginTop="13px"
            android:gravity="center"
            android:textSize="24px" />

        <Button
            android:layout_width="288px"
            android:layout_height="42px"
            android:layout_marginTop="42px"
            android:background="#FFFF00"
            android:gravity="center"
            android:onClick="reg_queren"
            android:text="@string/queren"
            android:textSize="24px" />
    </LinearLayout>
    <!-- 下面的内容一开始是隐藏起来的 -->

    <LinearLayout
        android:id="@+id/reg_photolayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#e0000000"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone" >

        <Button
            android:id="@+id/paizhaoshangchuan"
            android:layout_width="288px"
            android:layout_height="42px"
            android:layout_marginTop="531px"
            android:background="#FF8C00"
            android:onClick="reg_paizhaoshangchuan"
            android:text="@string/takephoto"
            android:textColor="#FFFFFF"
            android:textSize="24px" />

        <Button
            android:id="@+id/congxiangce"
            android:layout_width="288px"
            android:layout_height="42px"
            android:layout_marginTop="17px"
            android:background="#FF8C00"
            android:onClick="reg_congxiangce"
            android:text="@string/fromphotostore"
            android:textColor="#FFFFFF"
            android:textSize="24px" />
    </LinearLayout>
    <!-- 上面的内容一开始是隐藏起来的 -->


    <!-- 下面的内容一开始是隐藏起来的 -->

    <LinearLayout
        android:id="@+id/reg_photolayout2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#e0000000"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+id/regerror"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="514px"
            android:background="#00000000"
            android:textColor="#FFFFFF"
            android:textSize="24px" />

        <Button
            android:id="@+id/reg_error"
            android:layout_width="288px"
            android:layout_height="31px"
            android:layout_marginTop="30px"
            android:background="#FF8C00"
            android:onClick="reg_fanhui"
            android:text="@string/reg_fanhui"
            android:textColor="#FFFFFF"
            android:textSize="24px" />
    </LinearLayout>
    <!-- 上面的内容一开始是隐藏起来的 -->

</RelativeLayout>