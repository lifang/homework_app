
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

<LinearLayout 
   
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bj"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >

    <ImageButton
        android:id ="@+id/reg_touxiang"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="@drawable/moren"
        android:layout_marginTop="100dp"
      />

   

    
     <TextView
       
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_marginTop="50dp"
        android:text="@string/nicheng"
        android:textSize="16sp" />
     
          <EditText
        android:id="@+id/reg_nicheng"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="16sp" />
           <TextView
       
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_marginTop="20dp"
        android:text="@string/xingming"
        android:textSize="16sp" />
     
          <EditText
        android:id="@+id/reg_xingming"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="16sp" />    
                   <TextView
       
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_marginTop="20dp"
        android:text="@string/banjiyanzhengma"
        android:textSize="16sp" />
     
          <EditText
        android:id="@+id/reg_banjiyanzhengma"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="16sp" /> 
                  <Button
     
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:background="#FFFF00"
        android:onClick="reg_queren"
        android:text="@string/queren"
        android:textSize="16sp" /> 
    
    
    
</LinearLayout>
   <!-- 下面的内容一开始是隐藏起来的 -->

            <LinearLayout
                android:id="@+id/photolayout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                 android:gravity="center_horizontal"
                android:background="#e0000000"
                android:orientation="vertical"
                 android:visibility="gone" 
                 >
<Button
            android:id="@+id/paizhaoshangchuan"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="#FF8C00"
            android:onClick="sel_paizhaoshangchuan"
            android:textColor="#FFFFFF"
            android:text="拍照上传" />
<Button
            android:id="@+id/congxiangce"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
         android:background="#FF8C00"
             android:onClick="sel_congxiangce"
             android:layout_marginTop="50dp"
            android:textColor="#FFFFFF"
            android:text="从相册选择" />
            </LinearLayout>
            <!-- 上面的内容一开始是隐藏起来的 -->
</RelativeLayout>