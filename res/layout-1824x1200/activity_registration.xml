<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/bj"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_horizontal"
        android:orientation="vertical" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="200px"
            android:text="@string/reg_info"
            android:textColor="#000000"
            android:textSize="60px" />
        
        <ImageButton
            android:id="@+id/reg_touxiang"
            android:layout_width="176px"
            android:layout_height="186px"
            android:layout_marginTop="246px"
            android:background="@drawable/moren" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="76px"
            android:text="@string/nicheng"
            android:textColor="#000000"
            android:textSize="30px" />

        <EditText
            android:id="@+id/reg_nicheng"
            android:layout_width="480px"
            android:layout_height="71px"
            android:layout_marginTop="22px"
            android:gravity="center"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="30px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22px"
            android:text="@string/xingming"
            android:textColor="#000000"
            android:textSize="30px" />

        <EditText
            android:id="@+id/reg_xingming"
            android:layout_width="480px"
            android:layout_height="71px"
            android:layout_marginTop="22px"
            android:gravity="center"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="30px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22px"
            android:text="@string/banjiyanzhengma"
            android:textColor="#000000"
            android:textSize="30px" />

        <EditText
            android:id="@+id/reg_banjiyanzhengma"
            android:layout_width="480px"
            android:layout_height="71px"
            android:layout_marginTop="22px"
            android:gravity="center"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="30px" />

        <Button
            android:layout_width="480px"
            android:layout_height="71px"
            android:layout_marginTop="69px"
            android:background="#FFFF00"
            android:gravity="center"
            android:onClick="reg_queren"
            android:text="@string/queren"
            android:textSize="30px" />
    </LinearLayout>

</RelativeLayout>